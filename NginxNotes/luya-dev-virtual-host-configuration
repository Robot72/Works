server {
        listen 80;
        listen [::]:80;

        root /vagrant/webroot/yourWebsite.com/public_html; #Вместо yourWebsite.com вствить папку с моим проектом
        index index.php;
        server_name yourWebsite.com www.yourWebsite.com; #Вместо yourWebsite.com вствить домен, по которому вы будете искать проект, например new-website.dev

        location / {
                index  index.html index.php;
                try_files $uri $uri/ /index.php?$query_string;
        }

        # pass the PHP scripts to FastCGI server listening on 127.0.0.1:9000
        #
        location ~ \.php$ {
                include snippets/fastcgi-php.conf;
        #
        #       # With php7.0-cgi alone:
        #       fastcgi_pass 127.0.0.1:9000;
        #       # With php7.0-fpm:
                fastcgi_pass unix:/run/php/php7.0-fpm.sock; # Ссылаемся на установленную версию в системе
        }
        
        location ~* ^.+\.(js|css)$ { # Для очистки кэша на разработке для js/css файлов
            #old style: add_header Cache-Control "no-store, no-cache, must-revalidate, post-check=0, pre-check=0";
            #old style: add_header Pragma "no-cache";
            expires -1;
            sendfile off; #if you're using virtualbox (it is not about cache, but you will need it) https://www.vagrantup.com/docs/synced-folders/virtualbox.html 
        }

        # deny access to .htaccess files, if Apache's document root
        # concurs with nginx's one
        #
        location ~ /\.ht {
                deny all;
        }
}
